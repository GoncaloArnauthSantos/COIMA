
<div class="container-fluid">
    <div class="loginButtonHome">
        {{#if username}}
            <a href="/user/page/1"><button class="btn btn-outline-info my-2 my-sm-0" type="button">
                <img src="/images/user_male2-128.png" width="16" height="16"/>
                Welcome {{username}}!
            </button></a>
            <a href="/logout"><button class="btn btn-outline-info my-2 my-sm-0" type="button">Logout</button></a>
        {{else}}
            <a href="/login"><button class="btn btn-outline-info my-2 my-sm-0" type="button">Login</button></a>
            <a href="/signUp"><button class="btn btn-outline-info my-2 my-sm-0" type="button">Sign Up</button></a>
        {{/if}}
    </div>
    <div class="coima-header">
        <h1 align="center">COIMA</h1>
    </div>

    <div align="center">
        <form method="GET" action="/search/" class="form-signin">
            <input class="form-control" name="q" type="search" placeholder="Search" required/>
            <input type="text" name="page" value="1" hidden/>
            <button class="btn btn-outline-info my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
    <div class="imgList" align="center">
        <div class="imgContainer">
            <img class="homepage-cover" src="/images/logo.jpg">
        </div>
    </div>
    {{> footer}}
</div>


